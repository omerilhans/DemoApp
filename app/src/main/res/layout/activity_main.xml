<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_get_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_round_background"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:text="@string/getToken"
        android:textColor="@color/white"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/btn_delete_token"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_round_background"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/deleteToken"
        android:textColor="@color/white"
        tools:ignore="ButtonStyle,RelativeOverlap" />

    <Button
        android:id="@+id/btn_get_aaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_round_background"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/get_aaid"
        android:textColor="@color/white"
        tools:ignore="ButtonStyle" />

    <Button
        android:id="@+id/btn_delete_aaid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_round_background"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:text="@string/delete_aaid"
        android:textColor="@color/white"
        tools:ignore="ButtonStyle" />
</LinearLayout>